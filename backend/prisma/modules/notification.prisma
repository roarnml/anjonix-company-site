model Notification {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  message     String
  isRead      Boolean   @default(false)
  payload   Json
  readAt    DateTime?
  createdAt DateTime @default(now())

  relatedPostId   Int?
  relatedThreadId Int?
  relatedUserId   String?
}