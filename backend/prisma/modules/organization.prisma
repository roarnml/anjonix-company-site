model Organization {
  id            Int      @id @default(autoincrement())
  name          String
  allowedDomain String   @unique
  address       String?
  contactEmail  String?
  contactPhone  String?
  website       String?
  description   String?
  createdAt     DateTime @default(now())
  deletedAt     DateTime?   // ðŸ‘ˆ for soft delete

  users         User[]
  bookings      Booking[]
  forumPosts    ForumPost[]
  forumThreads  ForumThread[]
}
