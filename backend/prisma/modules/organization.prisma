model Organization {
  id            Int      @id @default(autoincrement())
  name          String
  allowedDomain String   @unique
  address       String?
  contactEmail  String?
  contactPhone  String?
  website       String?
  description   String?
  createdAt     DateTime @default(now())

  users         User[]
  bookings      Booking[]     // ðŸ‘ˆ back relation
  forumPosts    ForumPost[]   // ðŸ‘ˆ also needed below
  forumThreads ForumThread[]
}
