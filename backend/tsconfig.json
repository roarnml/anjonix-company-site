{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",               // or "NodeNext" if you want ESM
    "moduleResolution": "Node",         // or "NodeNext" if using ESM
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
