{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",  
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node",         // or "NodeNext" if using ESM
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
